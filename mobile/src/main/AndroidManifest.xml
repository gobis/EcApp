<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gw.ecapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".EcApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
        <!-- values are barcode , ocr , face -->

        <activity android:name=".scangateway.ScanActivity"></activity>
        <activity
            android:name=".demo.DemoActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".startup.WifiActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".configuration.DeviceListActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".devicecontrol.DeviceControlListActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".devicecontrol.edit.DeviceEditActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".configuration.qrscan.QrCodeScanActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".startup.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>