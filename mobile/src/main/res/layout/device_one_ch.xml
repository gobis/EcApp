<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_leaf"
    android:layout_marginTop="@dimen/margin_tiny">


    <TextView
        android:id="@+id/one_ch_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_name"
        android:textSize="@dimen/device_name_font_size"
        android:padding="@dimen/padding_normal"/>

    <ImageView
        android:id="@+id/ch_1_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        />

    <View
        android:id="@+id/ch_1_divider_line"
        android:layout_below="@+id/one_ch_device_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_two"
        />


    <LinearLayout
        android:id="@+id/ch_1_control_1_container"
        android:layout_below="@+id/ch_1_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ch1_control_1_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/appliances_ph_med" />

        <TextView
            android:id="@+id/ch1_control_1_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/device_name" />

        <Switch
            android:id="@+id/ch1_control_1_switch_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>


</RelativeLayout>