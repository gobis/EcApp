<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/faded_white"
    android:layout_marginTop="@dimen/margin_tiny">


    <TextView
        android:id="@+id/four_ch_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_name"
        android:textSize="@dimen/device_name_font_size"
        android:padding="@dimen/padding_normal"/>

    <ImageView
        android:id="@+id/ch4_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        />

    <View
        android:id="@+id/ch2_divider_line"
        android:layout_below="@+id/four_ch_device_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_two"
        android:layout_marginBottom="@dimen/margin_tiny"
        />

    <LinearLayout
        android:id="@+id/ch4_control_1_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_control_row_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ch4_control_1_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/appliances_ph_med" />

        <TextView
            android:id="@+id/ch4_control_1_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_green"
            android:text="@string/device_name" />

        <ImageView
            android:id="@+id/ch4_control_1_switch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="2"
            android:src="@drawable/switch_off_state"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ch4_control_2_container"
        android:layout_below="@+id/ch4_control_1_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_control_row_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ch4_control_2_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/appliances_ph_med" />

        <TextView
            android:id="@+id/ch4_control_2_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_green"
            android:text="@string/device_name" />

        <ImageView
            android:id="@+id/ch4_control_2_switch"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin_normal"
            android:src="@drawable/switch_off_state"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch4_control_3_container"
        android:layout_below="@+id/ch4_control_2_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_control_row_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ch4_control_3_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/appliances_ph_med" />

        <TextView
            android:id="@+id/ch4_control_3_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_green"
            android:text="@string/device_name" />

        <ImageView
            android:id="@+id/ch4_control_3_switch"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/switch_off_state"
            android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ch4_control_4_container"
        android:layout_below="@+id/ch4_control_3_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_control_row_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/ch4_control_4_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/appliances_ph_med" />

        <TextView
            android:id="@+id/ch4_control_4_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color_green"
            android:text="@string/device_name" />

        <ImageView
            android:id="@+id/ch4_control_4_switch"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/switch_off_state"
            android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>

</RelativeLayout>