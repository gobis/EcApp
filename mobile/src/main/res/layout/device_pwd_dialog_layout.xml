<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_large"
    android:layout_marginBottom="@dimen/margin_large"
    >

    <TextView
        android:id="@+id/wifi_name_conn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect_to_device_wifi"
        android:paddingLeft="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/wifi_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_name_conn_text"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edit_text"
        android:drawableLeft="@drawable/ic_lock_white"
        android:drawablePadding="50dp"
        android:ellipsize="end"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter router password"
        android:inputType="textPassword"
        android:maxHeight="60dp"
        android:maxLines="1"
        android:minHeight="50dp"
        android:paddingLeft="5dp" />


    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_pwd"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:background="@drawable/login_button_shape"
        android:maxHeight="50dp"
        android:onClick="onConnectClick"
        android:padding="12dp"
        android:text="@string/connect"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>